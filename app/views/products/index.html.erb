<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<%= link_to "New product", new_product_path, class: "btn btn-primary text-white mb-3" %>

<div id="products" class="row">
  <% @products.each do |product| %>
      <div class="col-md-3 mb-3">
        <%= render product %>
      </div>
  <% end %>
</div>