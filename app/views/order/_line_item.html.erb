<% total_price = unit_price * quantity %>

<div class="row sv-line-item pt-3">
  <div class="col-6">
    <span class="d-block fw-bold"><%= name %></span>
    <span class="d-block fw-light text-muted"><%= notes %></span>
  </div>

  <div class="col-2">
    <span class="sv-line-item__quantity"><%= quantity %></span>
  </div>

  <div class="col-2">
    <span class="sv-line-item__unit-price">R<%= unit_price %></span> 
  </div>

  <div class="col-2">
    <span class="fw-bold">R<%= total_price %></span> 
  </div>
</div>